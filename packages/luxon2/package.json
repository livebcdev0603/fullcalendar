{
  "name": "@fullcalendar/luxon2",
  "version": "6.0.0-beta.3",
  "title": "FullCalendar Luxon 2 Plugin",
  "description": "A connector to the Luxon 2 date library",
  "docs": "https://fullcalendar.io/docs/luxon2",
  "peerDependencies": {
    "@fullcalendar/core": "workspace:*",
    "luxon": "^2.0.0"
  },
  "devDependencies": {
    "@fullcalendar/core": "workspace:*",
    "@fullcalendar/standard-scripts": "workspace:*",
    "@types/luxon": "^2.0.9",
    "luxon": "^2.0.0"
  },
  "scripts": {
    "build": "standard-scripts pkg:build",
    "clean": "standard-scripts pkg:clean",
    "lint": "eslint ."
  },
  "type": "module",
  "tsConfig": {
    "extends":  "@fullcalendar/standard-scripts/config/tsconfig.browser.json",
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./dist/.tsout"
    },
    "include": [
      "./src/**/*"
    ]
  },
  "buildConfig": {
    "exports": {
      ".": { "iife": true }
    },
    "iifeGlobals": {
      ".": "FullCalendar.Luxon2",
      "luxon": "luxon"
    }
  },
  "publishConfig": {
    "directory": "./dist",
    "linkDirectory": true
  }
}
