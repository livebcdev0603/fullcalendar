{
  "name": "@fullcalendar/core",
  "version": "6.0.0-beta.1",
  "title": "FullCalendar Core",
  "description": "core package",
  "type": "module",
  "dependencies": {
    "preact": "^10.0.5",
    "tslib": "^2.1.0"
  },
  "devDependencies": {
    "@fullcalendar/workspace-scripts": "workspace:*",
    "handlebars": "^4.1.2"
  },
  "scripts": {
    "build": "workspace-scripts pkg:build",
    "clean": "workspace-scripts pkg:clean"
  },
  "buildConfig": {
    "exports": {
      ".": {
        "iife": {
          "name": "FullCalendar"
        }
      },
      "./preact": {},
      "./locales/*": {
        "iife": {
          "generator": "./scripts/generate-locales-each-iife.js",
          "globals": {
            "../index.js": "FullCalendar"
          }
        }
      },
      "./locales-all": {
        "generator": "./scripts/generate-locales-all.js",
        "iife": {
          "globals": {
            "./index.js": "FullCalendar"
          }
        }
      }
    }
  },
  "publishConfig": {
    "directory": "./dist",
    "linkDirectory": true
  }
}
