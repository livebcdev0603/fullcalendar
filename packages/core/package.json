{
  "name": "@fullcalendar/core",
  "version": "6.0.0-beta.1",
  "title": "FullCalendar Core",
  "description": "core package",
  "type": "module",
  "dependencies": {
    "preact": "^10.0.5",
    "tslib": "^2.1.0"
  },
  "devDependencies": {
    "@fullcalendar/workspace-scripts": "workspace:*",
    "globby": "^13.1.2",
    "handlebars": "^4.1.2"
  },
  "scripts": {
    "build": "workspace-scripts pkg:build",
    "clean": "workspace-scripts pkg:clean",
    "lint": "eslint ."
  },
  "buildConfig": {
    "iifeExternals": false,
    "exports": {
      ".": { "iife": "FullCalendar" },
      "./preact": {},
      "./locales-all": { "iife": true, "generator": "./scripts/generate-locales-all.js" },
      "./locales/*": { "iife": true, "iifeGenerator": "./scripts/generate-locale-iife.js" }
    }
  },
  "publishConfig": {
    "directory": "./dist",
    "linkDirectory": true
  }
}
