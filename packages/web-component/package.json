{
  "name": "@fullcalendar/web-component",
  "version": "6.0.0-beta.1",
  "title": "FullCalendar Web Component",
  "description": "FullCalendar implemented as a Custom Element",
  "type": "module",
  "dependencies": {
    "@fullcalendar/core": "workspace:*",
    "tslib": "^2.1.0"
  },
  "devDependencies": {
    "@fullcalendar/standard-scripts": "workspace:*"
  },
  "scripts": {
    "build": "standard-scripts pkg:build",
    "clean": "standard-scripts pkg:clean",
    "lint": "eslint ."
  },
  "tsConfig": {
    "extends":  "@fullcalendar/standard-scripts/config/tsconfig.browser.json",
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./dist/.tsout"
    },
    "include": [
      "./src/**/*"
    ]
  },
  "buildConfig": {
    "exports": {
      ".": { "iife": true }
    },
    "iifeGlobals": {
      "tslib": ""
    }
  },
  "publishConfig": {
    "directory": "./dist",
    "linkDirectory": true
  }
}
