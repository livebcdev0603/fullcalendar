{
  "name": "@fullcalendar/moment-timezone",
  "version": "6.0.0-beta.4",
  "title": "FullCalendar Moment Timezone Plugin",
  "description": "A connector to the moment-timezone library",
  "docs": "https://fullcalendar.io/docs/moment-timezone-plugin",
  "peerDependencies": {
    "@fullcalendar/core": "workspace:*",
    "moment-timezone": "^0.5.31"
  },
  "devDependencies": {
    "@fullcalendar/core": "workspace:*",
    "@fullcalendar/standard-scripts": "workspace:*",
    "moment-timezone": "^0.5.31"
  },
  "scripts": {
    "build": "standard-scripts pkg:build",
    "clean": "standard-scripts pkg:clean",
    "lint": "eslint ."
  },
  "type": "module",
  "tsConfig": {
    "extends":  "@fullcalendar/standard-scripts/config/tsconfig.browser.json",
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./dist/.tsout"
    },
    "include": [
      "./src/**/*"
    ]
  },
  "buildConfig": {
    "exports": {
      ".": { "iife": true }
    },
    "iifeGlobals": {
      ".": "FullCalendar.MomentTimezone",
      "moment": "moment"
    }
  },
  "publishConfig": {
    "directory": "./dist",
    "linkDirectory": true
  }
}
